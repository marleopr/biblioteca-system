{
  "name": "biblioteca-system",
  "version": "1.0.0",
  "description": "Backend do Sistema de Gest√£o de Biblioteca",
  "main": "dist/server.js",
  "bin": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate": "ts-node src/database/migrations/run.ts",
    "seed:test": "ts-node src/database/migrations/seed_test_data.ts",
    "pkg": "pkg . --out-path dist/pkg"
  },
  "keywords": [
    "library",
    "management",
    "system"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^9.0.7",
    "pkg": "^5.8.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "pkg": {
    "scripts": [
      "dist/**/*.js"
    ],
    "assets": [
      "frontend/dist/**/*"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist/pkg"
  }
}
